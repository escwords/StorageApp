<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.words.storageapp.ui.main.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_noConnection"
            app:destination="@id/noConnection"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/noConnection"
        android:name="com.words.storageapp.NoConnection"
        tools:layout="@layout/fragment_no_connection" />
    <fragment
        android:id="@+id/noLocationFragment"
        android:name="com.words.storageapp.NoLocationFragment"
        android:label="NoLocationFragment"
        tools:layout="@layout/fragment_no_location" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.words.storageapp.ui.account.viewProfile.ProfileFragment"
        tools:layout="@layout/fragment_profile2">
        <action
            android:id="@+id/action_profileFragment_to_profileImageFragment"
            app:destination="@id/profileImageFragment" />
        <action
            android:id="@+id/action_profileFragment_to_editAlbumFragment"
            app:destination="@id/editAlbumFragment"
            app:popUpTo="@id/profileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
        <action
            android:id="@+id/action_profileFragment_to_configureFragment"
            app:destination="@id/configureFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.words.storageapp.ui.account.LoginFragment"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.words.storageapp.ui.account.RegistrationFragment"
        tools:layout="@layout/fragment_registration" />

    <fragment
        android:id="@+id/profileImageFragment"
        android:name="com.words.storageapp.ui.account.viewProfile.ProfileImageFragment"
        tools:layout="@layout/fragment_status_edit">
        <action
            android:id="@+id/action_profileImageFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/editAlbumFragment"
        android:name="com.words.storageapp.ui.account.viewProfile.EditAlbumFragment"
        tools:layout="@layout/fragment_edit_album">
        <action
            android:id="@+id/action_editAlbumFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.words.storageapp.ui.account.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.words.storageapp.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.words.storageapp.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/configureFragment"
        android:name="com.words.storageapp.ConfigureFragment"
        android:label="fragment_configure"
        tools:layout="@layout/fragment_configure" />
</navigation>